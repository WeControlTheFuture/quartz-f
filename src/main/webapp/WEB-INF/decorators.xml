<?xml version="1.0" encoding="ISO-8859-1"?>

<decorators defaultdir="/WEB-INF/decorators">
	<!-- Any urls that are excluded will never be decorated by Sitemesh -->
	<excludes>
		<pattern>/nodecorate/*</pattern>
		<pattern>/styles/*</pattern>
		<pattern>/scripts/*</pattern>
		<pattern>/images/*</pattern>
		<pattern>/dojo/*</pattern>
		<pattern>/struts/*</pattern>
	</excludes>


	<decorator name="simple" page="/WEB-INF/decorators/cssMain.ftl">
		<pattern>*</pattern>
	</decorator>
	
	<decorator name="window" page="/WEB-INF/decorators/window.jsp" />
	<decorator name="nav" page="/WEB-INF/decorators/nav.jsp" />


</decorators>
